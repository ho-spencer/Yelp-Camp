<% layout("layouts/boilerplate.ejs") %> 
<div class="row">
    <div class="col-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Status <%= err.statusCode %>: <%= err.message  %></h4>
            <!-- show error stack / trace only in development mode -->
            <% if (process.env.NODE_ENV !== "production") { %>
                <p> <%= err.stack %> </p>
            <% } %>
        </div>
    </div>
</div>
